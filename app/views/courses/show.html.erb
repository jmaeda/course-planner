<div class ="col-sm-1">
</div>

<div class="col-md-10">
	<p id="notice"><%= notice %></p>

	<h2>
	  <strong><%= @course.name %></strong>
	</h2>

	<h6>
	  <strong>Code:</strong>
	  <%= @course.code %>
	</h6>

	<h6>
	  <strong>Description:</strong>
	  <%= @course.description %>
	</h6>

	<br>
	<h4>Enrolled Users:</h4>
	<div class = "row">
		<table class="table table-striped">
		    <thead class="thead-inverse">
		      <tr>
		        <th>Name</th>
		        <th style="width: 10%"></th>
		      </tr>
		    </thead>

		    <tbody>
		      <% @users.each do |user| %>
		        <tr>
		          <td><strong><%= user.name %></strong></td>
		          <td><%= button_to 'Profile', user, method: :get, class: 'btn .btn-success darkGrayButton' %></td>
		        </tr>
		      <% end %>
		    </tbody>
		</table>
	</div>
</div>

<div class ="col-sm-1">
</div>