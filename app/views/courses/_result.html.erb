<div class = "row">
    <h3> <%= @courses.length %> matches found </h3>
</div>
<br>
<br>
<div class = "row">
	<table class="table table-striped">
	    <thead class="thead-inverse">
	      <tr>
	        <th>Name</th>
	        <th>Code</th>
	        <th>Description</th>
	        <th colspan="3"></th>
	        <th colspan="3"></th>
	      </tr>
	    </thead>

	    <tbody>
	      <% @courses.each do |course| %>
	        <tr>
	          <td><%= course.name %></td>
	          <td><%= course.code %></td>
	          <td><%= course.description %></td>
	          <td><%= button_to 'Info', course, method: :get, class: 'btn .btn-success darkGrayButton'%></td>
	          <% if @enrolled_courses.include?(course)%>
	          	<td><%= button_to 'Unenroll', enrollments_deletereg_path, {method: :delete, params:{course_id: course, user_id: current_user}, class: 'btn .btn-success rbutton'} %></td>
	          <% else %>
	          	<td><%= button_to 'Enroll', enrollments_create_path, params:{enrollment: {course_id: course, user_id: current_user}}, class: 'btn .btn-success gbutton' %></td>
	          <% end %>
	        </tr>
	      <% end %>
	    </tbody>
	</table>
</div>